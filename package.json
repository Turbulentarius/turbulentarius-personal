{
  "dependencies": {
    "@tailwindcss/postcss": "^4.0.9"
  },
  "scripts": {
    "build": "cp ./*.html build/ && postcss src/styles/tailwind.css -o build/css/main.css",
    "build-watch": "postcss src/styles/tailwind.css -o build/css/main.css --watch",
    "dev": "concurrently \"npm run build-watch\" \"live-server ./\""
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "live-server": "^1.2.2",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^4.0.9"
  }
}
